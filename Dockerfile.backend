# Backend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY server/ ./server/
COPY tsconfig.json ./

# Install tsx globally for running TypeScript
RUN npm install -g tsx

# Expose port
EXPOSE 5000

# Start the server
CMD ["tsx", "server/index.ts"]